<%= form_for @campaign, Routes.entries_campaign_path(@socket, :update, @entry.id), [phx_change: :validate, phx_submit: :save, crsf_token: @crsf_token], fn f -> %>
  <%= if @campaign.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <div>
    <%= submit "Save", phx_disable_with: "Saving..." %>
  </div>
<% end %>
